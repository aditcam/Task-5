<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.android.task5.MainActivity">

    <Button
        android:layout_margin="16dp"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:id="@+id/add"
        android:layout_below="@+id/tv"
        android:text="+"
        android:textSize="72sp"
        android:textAlignment="center"
        />
    <Button
    android:layout_margin="16dp"
    android:layout_width="150dp"
    android:layout_height="100dp"
    android:id="@+id/sub"
    android:layout_below="@+id/add"
    android:text="-"
    android:textSize="72sp"
        android:textAlignment="center"
    />
    <Button
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
    android:layout_width="150dp"
    android:layout_height="180dp"
    android:id="@+id/mul"
    android:layout_below="@+id/sub"
    android:text="x"
    android:textSize="72sp"
        android:textAlignment="center"
    />
   <Button
    android:layout_margin="16dp"
    android:layout_width="150dp"
    android:layout_height="100dp"
    android:id="@+id/div"
    android:layout_toRightOf="@+id/add"
    android:text="/"
    android:textSize="72sp"
       android:layout_below="@+id/tv"
    />
    <Button
    android:layout_margin="16dp"
    android:layout_width="150dp"
    android:layout_height="100dp"
    android:id="@+id/pow"
    android:layout_below="@+id/div"
    android:text="^"
    android:textSize="72sp"
        android:layout_toRightOf="@+id/sub"
    />
    <Button
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:id="@+id/per"
        android:layout_below="@+id/pow"
        android:text="%"
        android:textSize="72sp"
        android:layout_toRightOf="@+id/mul"
        />

    <EditText
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:hint="1st no"
        android:textSize="34sp"
        android:textAlignment="center"
        android:id="@+id/tv"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/add" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/tv1"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:hint="Ans"
        android:textSize="34sp"
        android:textAlignment="center"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="C"
        android:textSize="20dp"
        android:id="@+id/clr"
        android:layout_above="@+id/div"
        android:layout_toRightOf="@+id/tv2"/>

    <EditText
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:hint="2nd no"
        android:textSize="34sp"
        android:textAlignment="center"
        android:id="@+id/tv2"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/tv1"
        android:layout_marginEnd="15dp"
        />


</RelativeLayout>
